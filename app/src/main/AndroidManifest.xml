    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FakeRingerActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"></activity>

        <receiver android:name=".LaunchAppViaDialReceiver">
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ScheduleCallActivity"
            android:label="@string/app_name" />

        <activity-alias
            android:name=".Launcher"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:targetActivity=".ScheduleCallActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".SettingsActivity"
            android:excludeFromRecents="true"
            android:parentActivityName=".ScheduleCallActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ScheduleSMSActivity"></activity>

        <receiver
            android:name=".FakeSMSReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity android:name=".S6caller"></activity>
    </application>

</manifest>